{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "../",
        "noEmit": true,
        "types": [
            "node",
            "@cloudflare/vitest-pool-workers"
        ],
        "lib": ["ES2022"],
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "../src/mcp/**/*",
        "worker-configuration.d.ts",
        "test-types.d.ts",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
} 