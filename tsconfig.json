{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "target": "es2019",
    "composite": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test/samples/**"
  ]
}
